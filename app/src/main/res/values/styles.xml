<resources>

    <!-- Base application theme. -->
    <style name="SimpleNotesTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@color/colorBackground</item>

        <item name="toolbarStyle">@style/SimpleNotesTheme.Toolbar</item>
        <item name="buttonStyle">@style/SimpleNotesTheme.Button</item>
        <item name="editTextStyle">@style/SimpleNotesTheme.EditText</item>
        <item name="android:textViewStyle">@style/SimpleNotesTheme.TextView</item>
        <item name="popupMenuStyle">@style/SimpleNotesTheme.PopupOverlay</item>
    </style>

    <style name="SimpleNotesTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Popup menu -->
    <style name="SimpleNotesTheme.PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/colorToolbarLines</item>
        <item name="android:itemBackground">@color/colorPrimary</item>
    </style>

     <!--Toolbar -->
    <style name="SimpleNotesTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorToolbarLines</item>
    </style>

    <style name="SimpleNotesTheme.Toolbar.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/colorToolbarLines</item>
    </style>

    <!-- Edit text -->
    <style name="SimpleNotesTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorPrimaryDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorEditTextHighlight</item>

        <item name="android:textColor">@color/colorEditText</item>
    </style>

    <!-- Text view -->
    <style name="SimpleNotesTheme.TextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorEditText</item>
    </style>

    <!-- Button -->
    <style name="SimpleNotesTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorToolbarLines</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <!-- Floating button -->
    <style name="SimpleNotesTheme.FloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:src">@drawable/ic_input_add_24dp</item>
    </style>

</resources>
